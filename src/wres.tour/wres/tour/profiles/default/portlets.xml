<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone"> <!-- plone domain is required -->

 <!-- Remove default amberjack portlet at root -->

 <assignment
     remove="True"
     name="amberjack-choice-portlet"
     category="context"
     key="/"
     manager="plone.leftcolumn"
     type="collective.amberjack.portlet.AmberjackChoicePortlet">
 </assignment>

 <assignment name="amberjack-choice-portlet" category="context" key="/Ajuda" 
    manager="plone.leftcolumn" type="collective.amberjack.portlet.AmberjackChoicePortlet">
        <property name="macro">portlet</property>
        <property name="template">chart_navigation</property>
    </assignment>
    

</portlets>
