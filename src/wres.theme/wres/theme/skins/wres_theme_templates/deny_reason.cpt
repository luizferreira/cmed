<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="cmfuemr">

  <body tal:define="errors options/state/getErrors">
      <div metal:fill-slot="main">

      <h1 i18n:translate="heading_deny_reason">Deny Reason</h1>

      <form id="edit_form"
            name="edit_form"
            method="post"
            action="deny_reason"
            tal:attributes="action string:${context/absolute_url}/${template/id}">
        <input type="hidden" name="form.submitted" value="1" />
        <input type="hidden" name="workflow_action" value="deny" />
        
        <fieldset>

            <legend i18n:translate="legend_reason">Reason</legend>

            <div>
                <input type="radio" name="deny_reason" checked
                       tal:attributes="id string:not_my_patient;
                                       value string:Not my pacient"/><span i18n:translate="text_not_my_patient">
                                       Not my patient </span>
            </div>
            <div>
                <input type="radio" name="deny_reason"
                       tal:attributes="id string:another_reason;
                                       value string:another_reason"/><span i18n:translate="text_other">
                                       Other </span>
            </div>
        </fieldset>

        <fieldset>
            <legend i18n:translate="legend_other_reasons">Other Reasons</legend>
            <div class="field">
                <textarea id="other_deny_reason"
                          name="other_deny_reason"
                          cols="60"
                          rows="5"
                          tal:content="request/other_deny_reason|nothing"/>
            </div>

            <div class="formControls">
                <input class="context"
                       type="submit"
                       name="form.button.Save"
                       id="Save"
                       value="Negar"
                       i18n:attributes="value" />
                <input class="standalone"
                       type="submit"
                       name="form.button.Cancel"
                       id="Cancel"
                       value="Cancel"
                       i18n:attributes="value" />
            </div>

        </fieldset>
      </form>

    </div>
  </body>
</html>
