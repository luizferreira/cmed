<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
	  lang="en"
	  metal:use-macro="context/main_template/macros/master"
	  i18n:domain="cmfuemr">

	<metal:block fill-slot="style_slot">
		<link rel="stylesheet" type="text/css" href="cmed.css" />
		<link rel="stylesheet" type="text/css" href="prescriptions.css" />
	</metal:block>

	<metal:block fill-slot="javascript_head_slot">
		<script type="text/javascript" src="show_prescriptions.js"></script>
		<script type="text/javascript" src="format_date.js"></script>
	</metal:block>

	<div metal:fill-slot="main">
			<h1 i18n:translate="heading_add_new_prescription">Add New Prescription</h1>

			<div tal:define="template_data context/getAddNewPrescriptionData">
				<!-- Add prescription form -->
				<metal:add_prescription use-macro="here/prescriptions_macros/macros/add_prescription">
					<metal:buttons fill-slot="buttons">
						<input type="submit" class="standalone" name="form.button.cancel" value="Cancel" i18n:attributes="value"/>
						<input type="submit" class="standalone" name="form.button.add" value="Add"  i18n:attributes="value" id="add_prescription"/>
					</metal:buttons>
				</metal:add_prescription>
			</div>
	</div>
</html>
