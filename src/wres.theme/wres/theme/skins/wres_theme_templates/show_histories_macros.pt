<metal:history_table define-macro="history_table"
	i18n:domain="cmfuemr">
	<table id="surgical_history" class="listing"
		tal:attributes="id string:${history_data/id}_table">
		<thead>
			<th></th>
			<th i18n:translate="cmfuemr_listingheader_date">Date</th>
			<th i18n:translate="cmfuemr_listingheader_source">Source</th>
			<th i18n:translate="cmfuemr_listingheader_history">History</th>
		</thead>
		<tbody>
			<tr class="even"
				tal:repeat="history history_data/histories"
				tal:attributes="class history/class">
				<td tal:content="history/number">01</td>
				<td tal:content="history/date">10/29/2006</td>
				<td><a href=""
						tal:attributes="href history/came_from/href"
						tal:content="history/came_from/content" i18n:translate="">Progress Note</a></td>
				<td>
					<ul>
						<li tal:repeat="item history/history"
							tal:content="item" i18n:translate="">Some item of history value</li>
					</ul>
				</td>
			</tr>
		</tbody>
	</table>
</metal:history_table>

<metal:history_from_documents define-macro="history_from_documents"
	i18n:domain="cmfuemr">
	<tal:notes_history condition="history_data">
		<metal:history_table use-macro="here/show_histories_macros/macros/history_table" />
	</tal:notes_history>
	<p tal:condition="not:history_data" style="font-style:italic"
	   tal:content="nohist | default">No history from Medical Documents</p>
</metal:history_from_documents>
