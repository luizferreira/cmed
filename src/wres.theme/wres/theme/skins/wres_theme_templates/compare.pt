<html>
<head>
    <title>Comparação de imagens</title>

    <link type="text/css" href="galleryStyles.css" rel="stylesheet" />
    <link type="text/css" href="compare.css" rel="stylesheet" />

    <script type="text/javascript" src="jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="jquery.pikachoose.mod.js"></script>
    <script type="text/javascript" src="compare.js"></script>
</head>
<body>
    <div id="main_chart_print" 
            tal:define="ImagesAndFiles context/getUploadData;
            images python:ImagesAndFiles[0];
            files  python:ImagesAndFiles[1];">
        <table id="table">
            <tr>
                <th colspan="2" align="center" width="100px">
                    <a tal:attributes="href python: context.aq_inner.absolute_url()" class="back-button">Voltar</a>
                    <font color="#205C90">Modo de Comparação</font>

                </th>
            </tr>
            <tr>
                <td>
                    <div id="gallery1" class="pikachoose">
                        <span class="mensageOnImage" id="selection"></span>
                        <ul id="pictures">
                            <li tal:repeat="image python:images">
                                <span class="image_date" tal:content="python:image[1]"></span>
                                <a tal:attributes="href python:image[0]">
                                <img tal:attributes="src python:image[0]"/>
                                </a></li>
                            
                        </ul>
                    </div>
                </td>
                <td>
                    <div id="gallery2" class="pikachoose">
                        <span class="mensageOnImage" id="selection2"></span>
                        <ul id="pictures2">
                            <li tal:repeat="image python:images"><span class="image_date" tal:content="python:image[1]"></span><a tal:attributes="href python:image[0]"><img tal:attributes="src python:image[0]"/></a></li>
                        </ul>
                    </div>
                </td>
            </tr>
            <tr>            
                <td><br/>Selecione:<br/>
                    <span tal:repeat="image python:images">
                        <input type="radio" class="left" name="left" tal:attributes="value python:image[0];
                                                                        id  python:image[3]">
                        <span tal:content="python:image[2]">nome da imagem</span><br/>
                    </span><br/>
                <td><br/>Selecione:<br/>
                    <span tal:repeat="image python:images">
                        <input type="radio" class="right" name="right" tal:attributes="value python:image[0];
                                                                         id  python:image[3]">
                        <span tal:content="python:image[2]">nome da imagem</span><br/>
                    </span><br/>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
