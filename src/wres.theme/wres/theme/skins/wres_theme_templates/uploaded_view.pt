<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

    <metal:aux fill-slot="style_slot">
        <link type="text/css" href="galleryStyles.css" rel="stylesheet" />
        <link type="text/css" href="upload_view_style.css" rel="stylesheet" />
    </metal:aux>
	<metal:block fill-slot="javascript_head_slot">
        <script type="text/javascript" src="jquery-1.7.1.min.js"></script>
        <script type="text/javascript" src="jquery.pikachoose.mod.js"></script>
        <script type="text/javascript" src="upload_view.js"></script>
        <script type="text/javascript" src="fileuploader.js"></script>
    </metal:block>
    
<head>

<title i18n:translate="cmfuemr_patient_search">Patient search</title>


</head>

<body>

<div metal:fill-slot="main" id="main_chart_print" 
        tal:define="urls context/getUploadData" >

<table id="filesTable">
    <tr>
        <th width="350px">
            <div tal:condition="python: urls[0]">
                Arquivos <span class="to_right">Excluir?</span>
            </div>
        </th>
        <th align="center">
            <div>
                Imagens
            </div>
        </th>
    </tr>
    <tr>
        <td align="top" class="top_align"> 
            <form action="deleteExternalFile" method="GET"> 
                <tal:for repeat="file python:urls[1]"> 
                    <div>
                        <img tal:attributes="src python:file[2]"/>
                        <a  class="fileLink" tal:attributes="href python:file[0]" >
                            <span class="fileName" tal:content="python:file[1]"></span>
                        </a>
                        <input class="delete_checkbox" type="checkbox" tal:attributes="name python:file[0]" />
                    </div>
                </tal:for>
                <br/>
                <input tal:condition="python: urls[0]" type="submit" value="Excluir Selecionados"/>
                <div class="no_files" tal:condition="not: python: urls[0]">
                    Não há arquivos externos deste paciente
                </div>

            </form>
        </td>
        <td>
            <span class="mensageOnImage" id="image_name">Nome: <span id="selection"></span></span>
            <div class="pikachoose">
                <ul id="pictures">
                    <li tal:repeat="url python:urls[0]"><a tal:attributes="href python:url[0]"><img tal:attributes="src python:url[0]"/></a></li>
                </ul>
            </div>
        </td>
    </tr>
</table>


</div>

</body>
</html>
