<?xml version="1.0"?>
<object name="ReferringProviderFolder"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="wres.archetypes" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">ReferringProviderFolder</property>
  <property name="description"
    i18n:translate="">Folder of Referring Providers</property>
  <property name="content_meta_type">ReferringProviderFolder</property>
  <property name="content_icon">referring-provider-folder-icon.png</property>
  <property name="product">wres.archetypes</property>
  <property name="factory">addReferringProviderFolder</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="ReferringProvider" />  
  </property>    
  <property name="allow_discussion">False</property>
  <property name="default_view">referring_provider_folder_view</property>
  <property name="view_methods">
    <element value="base_view" />
    <element value="referring_provider_folder_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="False">
    <permission value="Modify portal content" />
  </action>
</object>
